<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFC"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutImagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBotoes"
            android:layout_width="379dp"
            android:layout_height="119dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="493dp">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomAppBar2"
                android:layout_width="365dp"
                android:layout_height="77dp"
                android:layout_gravity="bottom"

                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="21dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="69dp"
                android:layout_height="65dp"
                android:background="@null"
                android:tint="#355EF1"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
                app:layout_constraintTop_toTopOf="@+id/imageButton3"
                app:srcCompat="@mipmap/bed_foreground"
                tools:layout_editor_absoluteX="294dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="71dp"
                android:layout_height="65dp"
                android:background="@null"
                android:tint="#355EF1"
                app:srcCompat="@mipmap/food_foreground"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="26dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="71dp"
                android:layout_height="64dp"
                android:background="@null"
                android:tint="#355EF1"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
                app:layout_constraintTop_toTopOf="@+id/imageButton5"
                app:srcCompat="@mipmap/hospital_foreground"
                tools:layout_editor_absoluteX="189dp" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="71dp"
                android:layout_height="64dp"
                android:background="@null"
                android:tint="#355EF1"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
                app:layout_constraintTop_toTopOf="@+id/imageButton2"
                app:srcCompat="@mipmap/mapa_foreground"
                tools:layout_editor_absoluteX="99dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutPesquisa"
            android:layout_width="423dp"
            android:layout_height="82dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="-2dp">


            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="235dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_input"


                android:drawableTint="#E6F6F3F3"
                android:ems="10"
                android:hint="Pesquisar"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="15dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_marginEnd="72dp"
                android:tint="#0274FD"
                app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName"
                app:srcCompat="@android:drawable/ic_menu_search" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>