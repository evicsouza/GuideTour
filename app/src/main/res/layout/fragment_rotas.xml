<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RotasFragment"
    android:id="@+id/FragmentRotas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="381dp"
            android:layout_height="98dp"
            android:layout_marginTop="148dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imagemPontoTuristicoRotas"
                    android:layout_width="97dp"
                    android:layout_height="82dp"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:contentDescription="@string/Senha"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/cross_foreground"
                    app:tint="#355EF1" />

                <TextView
                    android:id="@+id/nomePontoTuristicoRotas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:text="Turismo tipo_turismo"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/imagemPontoTuristicoRotas"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/descricaoPontoTuristicoRotas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Quantidade de pontos turisticos"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/imagemPontoTuristicoRotas"
                    app:layout_constraintTop_toBottomOf="@+id/nomePontoTuristicoRotas" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
