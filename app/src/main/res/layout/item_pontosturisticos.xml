<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="405dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imagemPontoTuristicoRotas"
                android:layout_width="97dp"
                android:layout_height="82dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:contentDescription="@string/Senha"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/cross_foreground"
                app:tint="#355EF1" />

            <TextView
                android:id="@+id/nomePontoTuristicoRotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="Turismo tipo_turismo"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imagemPontoTuristicoRotas"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/descricaoPontoTuristicoRotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Descrição de pontos turisticos"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imagemPontoTuristicoRotas"
                app:layout_constraintTop_toBottomOf="@+id/nomePontoTuristicoRotas" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>